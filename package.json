{
  "name": "ticru.io",
  "version": "1.0.0",
  "description": "Modern web application with TypeScript and React",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "start:api": "node --loader ts-node/esm api/index.ts",
    "dev:api": "nodemon --exec node --loader ts-node/esm api/index.ts",
    "build:api": "tsc -p tsconfig.api.json",
    "cli": "node --loader ts-node/esm ticru-cli.ts"
  },
  "keywords": [
    "ticru",
    "web-app",
    "typescript",
    "react",
    "fastify",
    "nodejs"
  ],
  "author": "SOJIB-AHMMED",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "fastify": "^4.26.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/formbody": "^7.4.0",
    "pg": "^8.11.3",
    "dotenv": "^16.4.1",
    "commander": "^12.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "@types/node": "^20.11.5",
    "@types/pg": "^8.11.0",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.3"
  }
}
