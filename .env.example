# Ticru.io Environment Variables

# Application
VITE_APP_NAME=Ticru.io
VITE_APP_VERSION=1.0.0

# API Configuration
VITE_API_URL=https://api.ticru.io
VITE_API_TIMEOUT=30000

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_SENTIMENT_ANALYSIS=true
VITE_ENABLE_CAMPAIGN_MANAGER=true
VITE_ENABLE_ROLE_PLAY=true

# Backend API Server
PORT=8000
HOST=0.0.0.0
LOG_LEVEL=info

# Database (PostgreSQL)
DATABASE_URL=postgresql://localhost/ticru_db
# Or for production:
# DATABASE_URL=postgresql://user:password@host:port/database

# Deployment
NODE_ENV=production
